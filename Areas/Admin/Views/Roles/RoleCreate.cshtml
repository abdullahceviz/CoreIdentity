
@{
    ViewData["Title"] = "RoleCreate";
}
@model AdminViewModel.RoleCreateViewModel
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<h4>Role Oluşturma</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Role Oluşturma</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <form asp-action="RoleCreate">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-controller="Home" asp-action="UserList">Kullanıcı listesine geri dön</a>
        </div>
    </div>
</div>



