
@{
    ViewData["Title"] = "AssignRoleToUser";
}
@model List<AdminViewModel.AssignToUserViewModel>
<h1>AssignRoleToUser</h1>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcıya Rol Atama</h2>
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.UserId" method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@Model[i].Exist">
                    <label class="form-check-label" for="flexCheckChecked">
                        @Model[i].Name
                    </label>
                    <input type="hidden" asp-for=" @Model[i].Name">
                    <input type="hidden" asp-for=" @Model[i].Id">
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Role Ata" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Role listesine geri dön</a>
        </div>
    </div>
</div>

